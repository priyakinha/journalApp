<configuration>

<appender name="myConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
 <!-- A class that reprsent the consoleAppender.Brings output to the console -->
 <!-- we also have to set an encoder which tells in which format you want to print the log -->\

 <encoder>
   <pattern>
      %d{HH:mm:ss:SSS} [%thread] %-5level %logger{36} -%msg%n
   </pattern>
 </encoder>
</appender>
<appender name="myFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender"><!--rotation is acheived byrolling appender-->
<!-- WE need to tell ehre we append the log -->

 <file>
     JournalApp.log
  </file>


<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
<fileNamePattern>JournalApp-%d{yy-MM-dd_HH-mm}.%i.log</fileNamePattern>
 <maxFileSize>10MB</maxFileSize>
 <maxHistory>10</maxHistory>
 </rollingPolicy>

 <encoder>
   <pattern>
      %d{HH:mm:ss:SSS} [%thread] %-5level %logger{36} -%msg%n
   </pattern>
 </encoder>

</appender>

<root level="INFO">
   <appender-ref ref="myConsoleAppender"/>
   <appender-ref ref="myFileAppender"/>
</root>
</configuration>
